
CC = gcc
.SUFFIXES=.c .o

#===============================================================================
# Define compilation target
#===============================================================================
  TARGET = synth
#===============================================================================

#===============================================================================
# Define CFLAGS (compiler flags)
#===============================================================================
# Add all warnings and default include path
  CFLAGS = -Wall -I"./include"
# Add architecture flah
  ARCH=$(shell uname -m)
  ifeq ($(ARCH), x86_64)
    CFLAGS += -m64
  else
    CFLAGS += -m32
  endif
# Add debug flags
  ifneq ($(RELEASE), yes)
    CFLAGS += -O0 -g
  endif
#===============================================================================

#===============================================================================
# Define LFLAGS (linker flags)
#===============================================================================
  LFLAGS = -lm -lSDL2main -lSDL2
#===============================================================================

#===============================================================================
# Define where source files can be found and where objects and binary are output
#===============================================================================
  VPATH = src
  OBJDIR = obj
  BINDIR = bin
#===============================================================================

#===============================================================================
# Define every object required by compilation
#===============================================================================
  OBJS = $(OBJDIR)/main.o
#===============================================================================

#===============================================================================
# Define default compilation rule
#===============================================================================
all: MKDIRS $(BINDIR)/$(TARGET)
#===============================================================================

$(BINDIR)/$(TARGET): $(OBJS)
	$(CC) $(CFLAGS) -o $(BINDIR)/$(TARGET) $(OBJS) $(LFLAGS)

$(OBJDIR)/%.o: %.c
	$(CC) $(CFLAGS) -o $@ -c $<

MKDIRS: | $(OBJDIR)

$(OBJDIR):
	mkdir -p $(OBJDIR)
	mkdir -p $(BINDIR)

clean:
	rm -f $(OBJS) $(BINDIR)/$(TARGET)
	rm -rf $(OBJDIR) $(BINDIR)

